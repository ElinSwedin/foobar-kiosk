{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "bundle",
    "static"
  ]
}
